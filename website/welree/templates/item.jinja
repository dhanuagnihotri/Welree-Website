{% extends "base.jinja" %}
{% import "macros.jinja" as macros %}
{% block extra_css %}
<style type="text/css">
    .row {
        overflow: hidden;
    }
    [class*="col-"] {
        margin-bottom: -99999px;
        padding-bottom: 99999px;
    }

    img.img-thumbnail {
        height: 140px;
        width: 140px;
    }

    .container-fluid a {
      color: #27bdbe;
    }
</style>
{% endblock %}
{% block below_container %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                {{ macros.individual_carousel(collection, item) }}
            </div>
            <div class="col-lg-6 well">
                <h4>Details:</h4>
                <p>{{ item.description }} by <a href="{{ collection.owner.get_absolute_url() }}">{{ collection.owner.full_name }}</a></p>
                <p>Part of collection <a href="{{ collection.get_absolute_url() }}">{{ collection.name }}</a></p>
                {% if item.url %}<p>From: {{ item.url|urlize }}</p>{% endif %}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-6">
                <h4>About this {{ owner.noun }}:</h4>
                {{ owner.bio.rendered|safe }}
            </div>
            <div class="col-lg-6">
                <div>
                    <h4>Photos in this collection:</h4>
                    {{ macros.thumb_row(related_collection, collection) }}
                </div>
                <div>
                    <h4>Similar to this photo:</h4>
                    {{ macros.thumb_row(related_similar, collection) }}
                </div>
            </div>
        </div>
    </div>
    <div id="disqus_thread"></div>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
{% endblock %}
{% block extra_js %}
    {% include "disqus.jinja" %}
    <script>
        $(function() {
            welree.wire_action_buttons(function() { return $('a.action-add'); });
        });
    </script>
{% endblock %}
