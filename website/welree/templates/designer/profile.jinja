{% extends "base.jinja" %}
{% import "macros.jinja" as macros %}
{% block extra_css %}
<style type="text/css">
</style>
{% endblock %}
{% block below_container %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                {{ user.full_name }}
                {% if not following %}
                  <form class="form-tastypie" action="/api/v1/user/follow/">
                    <input type="hidden" value="{{ user.id }}" name="designer_id">
                    <input type="submit" value="Follow" class="btn btn-primary pull-right">
                  </form>
                {% else %}
                  <form class="form-tastypie" action="/api/v1/user/unfollow/">
                    <input type="hidden" value="{{ user.id }}" name="designer_id">
                    <input type="submit" value="Unfollow" class="btn btn-primary pull-right">
                  </form>
                {% endif %}
                {% if user.photo %}
                    {{ sorlimgtag(user.photo, "482x482", crop="center") }}
                {% else %}
                    <img src="/static/img/person.svg.png" width="100%">
                {% endif %}
            </div>
            <div class="col-lg-6 well">
                <h4>About this {{ user.noun }}:</h4>
                {{ user.bio.rendered|safe }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <h4>Collections:</h4>
                {{ macros.collection_rows(collections) }}
            </div>
        </div>
    </div>
    <div id="disqus_thread"></div>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
{% endblock %}
{% block extra_js %}
    {% include "disqus.jinja" %}
{% endblock %}
