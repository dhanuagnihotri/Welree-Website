{% extends "base.jinja" %}
{% block extra_css %}
<style type="text/css">
    a.forgot {
        font-size: 0.8em;
        color: #b2d037;
    }
    div.btn-facebook {
        margin-top: 30px;
    }
    div.signup-middle {
        margin-top: 50px;
    }
</style>
{% endblock %}
{% block content %}
<div class="well">
    <p class="text-error">{{ error_msg }}</p>
    <div class="clearfix">
        <div class="signup-option">
            <div class="btn-facebook">
                <a class="btn btn-lg btn-facebook btn-primary" href="{{ url("social:begin", "facebook") }}">Login with Facebook</a>
            </div>
        </div>
        <div class="signup-middle">- or -</div>
        <div class="signup-option">
            <form class="form-inline" action="{{ url("login") }}" method="post">
                {% csrf_token %}
                <input type="email" autocorrect="off" autocapitalize="off" class="input-lg" name="email" placeholder="Email" autofocus="autofocus">
                <input type="password" class="input-lg" name="password" placeholder="Password">
                {#<label class="checkbox">
                    <input type="checkbox"> Remember me
                </label>#}
                <br/></br>
                <button type="submit" class="btn btn-default">Sign in</button>
                <a class="forgot" href="{{ url("password_reset") }}">forgot password?</a>
            </form>
        </div>
    </div>
</div>
{% endblock %}
