{% extends "base.jinja" %}
{% import "macros.jinja" as macros %}
{% block extra_css %}
<style type="text/css">

    div.editorials {
        margin-top: 10px;
        margin-bottom: 20px;
    }
    div.editorials a {
        color: white;
        text-decoration: none;
    }
    div.editorial {
        width: 45%;
        display: inline-block;
        margin-top: 10px;
        margin-right: 20px;
        margin-left: 25px;
        text-transform: uppercase;
        color: white;
    }
    div.editorial .inner {
        height: 427px;
        position: relative;
    }
    div.editorial .topper {
        text-align: right;
        padding-right: 5px;
        background-color: rgba(100, 100, 100, 0.5);
    }
    div.editorial img {
        z-index: -1;
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
    }
    div.editorial .title {
        width: 100%;
        text-align: center;
        position: absolute;
        bottom: 90px;
        font-size: 2em;
        padding-left: 5px;
        padding-right: 5px;
    }
    div.editorial .read-more {
        border: 2px solid white;
        border-radius: 3px;
        color: white;
        width: 100px;
        position: absolute;
        left: 50%;
        margin-left: -50px;
        bottom: 15px;
        font-size: 0.9em;
        text-align: center;
        padding: 3px;
        background-color: rgba(255,255,255,0.3);
    }

</style>
{% endblock %}

{% block below_container %}
    <div class="editorials">
        {% for editorial in editorials %}
            <a href="{{ editorial.url }}" target="_blank">
            <div class="editorial">
                <div class="inner">
                    {{ sorlimgtag(editorial.photo, "420x420", crop="center", classes="editorial-cover") }}
                    <div class="topper">{{ editorial.category }}</div>
                    <div class="title">{{ editorial.title }}</div>
                    <div class="read-more">Read More</div>
                </div>
            </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
