{% extends "base.jinja" %}
{% block extra_css %}
<style type="text/css">
    div.btn-facebook {
        margin-top: 100px;
    }
    div.signup-middle {
        margin-top: 120px;
    }
</style>
{% endblock %}
{% block above_container %}<h1>Signup</h1>{% endblock %}
{% block content %}
    <p class="text-error">{{ error_msg }}</p>
    <div class="clearfix">
        <div class="signup-option">
            <div class="btn-facebook">
                <a class="btn btn-lg btn-facebook btn-primary" href="{{ url("social:begin", "facebook") }}">Signup with Facebook</a>
            </div>
        </div>
        <div class="signup-middle">- or -</div>
        <div class="signup-option">
            <form class="form-horizontal" action="{{ url("signup") }}" method="post">
              {% csrf_token %}
              <div class="control-group">
                <label class="control-label" for="inputEmail">Email:</label>
                <div class="controls">
                  <input class="input-lg" name="email" type="email" autocorrect="off" autocapitalize="off" id="inputEmail" placeholder="Email" autofocus="autofocus">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="inputPassword">Password:</label>
                <div class="controls">
                  <input class="input-lg" name="password" type="password" id="inputPassword" placeholder="Password">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label"></label>
                <div class="controls">
                  <button type="submit" class="btn btn-default">Signup with email</button>
                </div>
              </div>
            </form>
        </div>
    </div>
{% endblock %}
