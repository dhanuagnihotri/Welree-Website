<div id="header" class="contracted navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-nav-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
      </div>
      <div id="hidden-xs" class="hidden-xs"></div>
      <div class="gradient"></div>
      <div class="border-bottom border-left"><div></div></div>
      <div class="border-bottom border-right"><div></div></div>
      <div class="dropdown dropdown-search">
          <img src="/static/img/triple.png" class="triple downdown-toggle" data-toggle="dropdown" aria-expanded="true">
          {% macro searchdrop(title, values) %}
            <li role="presentation"><a href="#" class="search-category">
                <span class="glyphicon glyphicon-plus"></span>
                {{ title.title() }}
                <ul style="display:none;">
                    {% for value in values %}
                        <li class="search-facet" data-facet="{{title}}" data-facet-value="{{value}}">{{ value }}</li>
                    {% endfor %}
                </ul></a>
            </li>
          {% endmacro %}
          <ul class="dropdown-menu" role="menu">
              {% for facet, values in welree_facets.items() %}
                  {{ searchdrop(facet, values) }}
              {% endfor %}
          </ul>
      </div>
      <a href="/">
        <img src="/static/img/logo.png" class="logo">
        <img src="/static/img/logo-icon.png" class="logo-contracted">
      </a>

      <form class="form-inline pull-left" action="/search/" method="get">
          <div class="form-group has-feedback">
              <input name="q" type="search" class="hidden-xs hidden-sm form-control input-small" placeholder="Search jewelry, designers, blogs, & more">
              <span class="hidden-xs hidden-sm form-control-feedback" aria-hidden="true"><img class="search" src="/static/img/search.png"></span>
          </div>
      </form>

      <div class="collapse navbar-collapse" id="header-nav-collapse">
          <ul class="nav navbar-nav pull-right logged-out nav-text">
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              <span>COMMUNITY</span>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
            <li><a href="{{ url("events") }}">Events</a></li>
            </ul>
          </li>
          <li><a href="{{ url("designers") }}">DESIGNERS</a></li>
          <li><a href="{{ url("editorial") }}">EDITORIAL</a></li>
          <li class="dropdown pull-right">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <span class="glyphicon glyphicon-{{ "sunglasses" if request.user.is_designer else "user" }} " aria-hidden="true"></span>
                <span class="font-special">My Welree</span>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                {% if not request.user.is_authenticated() %}
                  <li><a href="{{ url("signup") }}">Sign Up</a></li>
                  <li><a href="{{ url("login") }}">Log In</a></li>
                {% else %}
                  <li><a href="{{ url("my") }}">My Welree</a></li>
                  <li class="divider"></li>
                  <li><a href="{{ url("designer_upload") if request.user.is_designer else url("consumer_upload") }}">Upload Photos</a></li>
                  <li class="divider"></li>
                  <li><a href="/logout/">Sign out</a></li>
                {% endif %}
              </ul>
            </li>
          </ul>
      </div>
    </div>
</div>
